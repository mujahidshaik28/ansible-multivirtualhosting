- name: Update app slave server
  hosts: app

  tasks:
  - name: Ensure the workspace directory is created
    file:
      path: /home/ec2-user/workspace
      state: directory

- name: Update web slave server
  hosts: web

  tasks:
  - name: Ensure the sample file is downloaded
    get_url:
      dest: /tmp
      url: https://file-examples.com/wp-content/storage/2017/10/file-example_PDF_500_kB.pdf

- name: Update db slave server
  hosts: db

  tasks:
  - name: Ensure the tools.txt file is created
    file:
      path: /home/ec2-user/tools.txt
      state: touch
